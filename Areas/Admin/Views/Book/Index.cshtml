@model IEnumerable<BookStore.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý sách </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/home/index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý sách</li>
            </ol>
        </nav>
    </div>
    <p>
        <a href="@Url.Action("Create", "Book")" class="btn btn-primary">Create New</a>
    </p>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên sách</th>
                    <th>Tác giả</th>
                    <th>IDLoai</th>
                    <th>Giá</th>
                    <th>Mô tả</th>
                    <th>Ảnh</th>
                    <th>ID org</th>
                    <th>Mã được áp dụng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.NameBook</td>
                            <td>@item.IDTG</td>
                            <td>@item.IDCAT</td>
                            <td>@item.GIA</td>
                            <td>@item.BookDescrip</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.HinhSach))
                                {
                                    <img src="@Url.Content(item.HinhSach)" alt="TacGia Image" width="100" height="150" />
                                }
                                else
                                {
                                    <span>Không có hình</span>
                                }
                            </td>
                            <td>@item.IDOrg</td>
                            <td>@item.IDCoupon</td>
                            <td>
                                <a href="/admin/book/edit/@item.ID" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/book/Delete/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Xóa</a>

                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có bản ghi nào</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
    <!--/.card-body-->
    <div class="card-footer">
    </div>
    <!--/.card-footer-->
</div>